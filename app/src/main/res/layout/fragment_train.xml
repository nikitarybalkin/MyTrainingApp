<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.fragment.TrainFragment">

    <TextView
        android:id="@+id/tv_NameOfTrain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="36sp"
        android:fontFamily="@font/alata"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/table_frame"
        app:layout_constraintLeft_toLeftOf="@id/tv_NameOfExercise"
        android:layout_marginStart="-20dp"
        app:layout_constraintRight_toRightOf="@id/tv_NameOfExercise"
        android:layout_marginEnd="-20dp"
        app:layout_constraintTop_toTopOf="@id/tv_NameOfExercise"
        android:layout_marginTop="-20dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_NameOfExercise"
        android:layout_marginBottom="-20dp"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/table_frame"
        app:layout_constraintLeft_toLeftOf="@id/tv_NumbOfSet"
        android:layout_marginStart="-20dp"
        app:layout_constraintRight_toRightOf="@id/tv_NumbOfSet"
        android:layout_marginEnd="-20dp"
        app:layout_constraintTop_toTopOf="@id/tv_NumbOfSet"
        android:layout_marginTop="-20dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_NumbOfSet"
        android:layout_marginBottom="-20dp"/>


    <TextView
        android:id="@+id/tv_NameOfExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/alata"
        android:text="@string/name_of_exercise"
        app:layout_constraintTop_toBottomOf="@id/tv_NameOfTrain"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <TextView
        android:id="@+id/tv_quantityOfRepeats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/quantity_of_repeats"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/et_QuantityOfRepeats"
        app:layout_constraintRight_toRightOf="@id/et_QuantityOfRepeats"
        app:layout_constraintTop_toBottomOf="@id/tv_NameOfExercise"
        android:layout_marginTop="300dp"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="356dp" />

    <TextView
        android:id="@+id/tv_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weight"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="@id/et_Weight"
        app:layout_constraintTop_toTopOf="@id/tv_quantityOfRepeats"
        app:layout_constraintLeft_toLeftOf="@id/et_Weight"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="433dp" />

    <Button
        android:id="@+id/b_nSet"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="@string/next_set"
        android:fontFamily="@font/alata"
        android:visibility="gone"
        android:textColor="@color/white"
        android:backgroundTint="@color/olive"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/b_Finish"
        android:layout_marginBottom="30dp"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="631dp" />

    <Button
        android:id="@+id/b_Finish"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="@string/finish_and_save_training"
        android:fontFamily="@font/alata"
        android:visibility="gone"
        android:textColor="@color/white"
        android:backgroundTint="@color/darkRed"
        app:layout_constraintBottom_toBottomOf="@id/b_nSet"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/b_nSet"
        tools:layout_editor_absoluteX="260dp"
        tools:layout_editor_absoluteY="633dp" />

    <EditText
        android:id="@+id/et_QuantityOfRepeats"
        android:layout_width="178dp"
        android:layout_height="43dp"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        android:ems="10"
        android:textColor="@color/black"
        android:gravity="center"
        android:background="@drawable/edittext_underline"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/b_nSet"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toStartOf="@id/et_Weight"/>

    <EditText
        android:id="@+id/et_Weight"
        android:layout_width="163dp"
        android:layout_height="42dp"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        android:ems="10"
        android:textColor="@color/black"
        android:gravity="center"
        android:background="@drawable/edittext_underline"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/b_Finish"
        app:layout_constraintLeft_toRightOf="@id/et_QuantityOfRepeats"
        android:layout_marginBottom="20dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_NumbOfSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/count_of_exercise"
        android:fontFamily="@font/alata"
        app:layout_constraintTop_toBottomOf="@id/tv_NameOfExercise"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/persistent_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:behavior_hideable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:behavior_peekHeight="0dp"
            android:background="@drawable/background_bottom_sheet"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/rv_TrainBottomSheet"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                >

            </androidx.recyclerview.widget.RecyclerView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>